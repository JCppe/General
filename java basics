##1: CMD;

C:> cd \prog\java_txt
C:> set path=%path%;C:\Program Files\Java\jdk1.8.0_131\bin
C:> javac <insert_file_Name_here>.java
C:> java <insert_file_name_here>

Disclamer: class name and file name must match


##2: Conventions;

Package: com.foo.bar
Class: FooBar
Interface: FooBar
Method: fooBar
Variables: fooBar
Constants: FOO_BAR


##3: Basic Frames:

CLASS

public class Main {

//initial class variables
    private String name;
    private int indexNum;
    private double numOne;
    private double numTwo;
    private double numThree;
}


CONSTRUCTOR

public Main(String nameMain, String purposeMain, int indexNum, double numOneMain, double numTwoMain, double numThreeMain) {
        name = nameMain;
        purpose = purposeMain;
        numOne = numOneMain;
        numTwo = numTwoMain;
        numThree = numThreeMain;
        }


OBJECT

Main myMain = new Main("First", 1, 1,2,3);

METHOD


FOR LOOP

double[] mainArray = {myMain.numOne, myMain.numTwo, myMain.numThree};

for (int i=0; i < mainArray.length; i++){
    System.out.println(mainArray[i]);
}


